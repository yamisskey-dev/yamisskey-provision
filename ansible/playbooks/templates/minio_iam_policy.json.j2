{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": [
        "s3:GetObject",
        "s3:PutObject",
        "s3:DeleteObject",
        "s3:ListBucket"
      ],
      "Resource": [
        "arn:aws:s3:::{{ minio_bucket_name_for_misskey }}",
        "arn:aws:s3:::{{ minio_bucket_name_for_misskey }}/*",
        "arn:aws:s3:::{{ minio_bucket_name_for_outline }}",
        "arn:aws:s3:::{{ minio_bucket_name_for_outline }}/*"
      ]
    }
  ]
}
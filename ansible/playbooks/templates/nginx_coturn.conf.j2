server {
    listen 80;
    server_name {{ coturn_server_name }};
    return 301 https://$server_name$request_uri;
}

server {
    listen 443 ssl;
    server_name {{ coturn_server_name }};
    ssl_certificate /etc/letsencrypt/live/{{ coturn_server_name }}/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/{{ coturn_server_name }}/privkey.pem;
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers HIGH:!aNULL:!MD5;

    location / {
        proxy_pass http://localhost:3478;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    location /turns {
        proxy_pass http://localhost:5349;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
}

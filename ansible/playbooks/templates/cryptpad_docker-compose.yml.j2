version: '3.7'

services:
  cryptpad:
    image: cryptpad/cryptpad:version-2024.9.1
    container_name: cryptpad
    restart: unless-stopped
    environment:
      - NODE_ENV=production
    ports:
      - "3333:3000"
    volumes:
      - type: bind
        source: ./config/config.js
        target: /cryptpad/lib/config.js
        read_only: true
      - ./data:/cryptpad/data
      - ./customize:/cryptpad/customize
      - ./onlyoffice-dist:/cryptpad/www/common/onlyoffice/dist
      - ./onlyoffice-conf:/cryptpad/onlyoffice-conf
    networks:
      - cryptpad_network
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:3000"]
      interval: 30s
      timeout: 10s
      retries: 3

networks:
  cryptpad_network:
    name: cryptpad_network
    driver: bridge
version: '3.7'

services:
  cryptpad:
    image: cryptpad/cryptpad:version-2024.9.1
    container_name: cryptpad
    restart: unless-stopped
    environment:
      - NODE_ENV=production
    ports:
      - "3333:3000"
    volumes:
      - ./config:/cryptpad/config:ro
      - ./data:/cryptpad/data
      - ./customize:/cryptpad/customize
    networks:
      - cryptpad_network
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:3000"]
      interval: 30s
      timeout: 10s
      retries: 3

networks:
  cryptpad_network:
    name: cryptpad_network
    driver: bridge
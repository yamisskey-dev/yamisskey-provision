server {
    listen 80;
    server_name element.yami.ski;

    return 301 https://$server_name$request_uri;
}

server {
    listen 443 ssl http2;
    server_name element.yami.ski;

    ssl_certificate /etc/letsencrypt/live/element.yami.ski/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/element.yami.ski/privkey.pem;
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers HIGH:!aNULL:!MD5;

    location / {
        proxy_pass http://localhost:8081;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        # For WebSocket
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection $connection_upgrade;
    }

    access_log /var/log/nginx/element_access.log;
    error_log /var/log/nginx/element_error.log;
}
MCAPTCHA_debug=true
MCAPTCHA_commercial=false
MCAPTCHA_source_code=https://github.com/mCaptcha/mCaptcha
MCAPTCHA_allow_registration=true
MCAPTCHA_allow_demo=false

# database
DATABASE_URL=postgres://{{ mcaptcha_postgres_user }}:{{ mcaptcha_postgres_password }}@mcaptcha_postgres:5432/{{ mcaptcha_postgres_db }}
MCAPTCHA_database_POOL=5

# redis
MCAPTCHA_redis_URL=redis://mcaptcha_redis
MCAPTCHA_redis_POOL=10

# server
PORT=7493
MCAPTCHA_server_DOMAIN={{ mcaptcha_server_name }}
MCAPTCHA__server_COOKIE_SECRET={{ mcaptcha_cookie_secret }}
MCAPTCHA__server_IP=0.0.0.0

# captcha
MCAPTCHA_captcha_SALT={{ mcaptcha_captcha_salt }}
MCAPTCHA_captcha_GC=30
MCAPTCHA_captcha_RUNNERS=4
MCAPTCHA_captcha_QUEUE_LENGTH=100
MCAPTCHA_captcha_ENABLE_STATS=true
MCAPTCHA_captcha_DEFAULT_DIFFICULTY_STRATEGY_avg_traffic_difficulty=1000
MCAPTCHA_captcha_DEFAULT_DIFFICULTY_STRATEGY_peak_sustainable_traffic_difficulty=3000
MCAPTCHA_captcha_DEFAULT_DIFFICULTY_STRATEGY_broke_my_site_traffic_difficulty=5000
MCAPTCHA_captcha_DEFAULT_DIFFICULTY_STRATEGY_duration=300
MCAPTCHA_captcha_DEFAULT_DIFFICULTY_STRATEGY_avg_traffic_time=300
MCAPTCHA_captcha_DEFAULT_DIFFICULTY_STRATEGY_peak_sustainable_traffic_time=300
MCAPTCHA_captcha_DEFAULT_DIFFICULTY_STRATEGY_broke_my_site_traffic_time=300
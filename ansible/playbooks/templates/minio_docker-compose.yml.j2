services:
  minio:
    image: quay.io/minio/minio
    container_name: minio
    restart: always
    # Basic resource limits for ARM64 compatibility
    deploy:
      resources:
        limits:
          memory: 1g
          cpus: '0.5'
    # Basic healthcheck
    healthcheck:
      test: ["CMD", "wget", "--no-verbose", "--tries=1", "--spider", "http://localhost:9000/minio/health/live"]
      interval: 60s
      timeout: 10s
      retries: 2
    environment:
      - MINIO_ROOT_USER={{ minio_root_user }}
      - MINIO_ROOT_PASSWORD={{ minio_root_password }}
      - MINIO_API_CORS_ALLOW_ORIGIN=*
      - MINIO_BROWSER=off
      - MINIO_REGION=ap-northeast-3
      - MINIO_DOMAIN={{ minio_api_server_name }}
      # Basic security settings
      - MINIO_COMPRESS=on
      # KMS encryption settings (auto-generated)
      - MINIO_KMS_SECRET_KEY={{ minio_kms_master_key }}
      - MINIO_KMS_AUTO_ENCRYPTION=on
    command: server /data --console-address ":9001"
    ports:
      - "9000:9000"
      # Console port 9001 not exposed externally (CLI management only)
    volumes:
      - /opt/minio/minio-data:/data
    networks:
      - external_network

networks:
  external_network:
    external: true
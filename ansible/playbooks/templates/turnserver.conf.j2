syslog

# Use fingerprint in TURN message
fingerprint

# Enable authentication to secure access to the TURN server
use-auth-secret
static-auth-secret={{ turn_secret }}

# server name and realm
realm={{ coturn_server_name }}
server-name={{ coturn_server_name }}

# Main listening port 
listening-port=3478

# Listening port for TURN over TLS
tls-listening-port=5349

# Further ports that are open for communication
min-port=49160
max-port=49200

no-tcp-relay
no-stun
no-multicast-peers

# Deny specific IP ranges
denied-peer-ip=10.0.0.0-10.255.255.255
denied-peer-ip=192.168.0.0-192.168.255.255
denied-peer-ip=172.16.0.0-172.31.255.255
denied-peer-ip=0.0.0.0-0.255.255.255
denied-peer-ip=100.64.0.0-100.127.255.255
denied-peer-ip=127.0.0.0-127.255.255.255
denied-peer-ip=169.254.0.0-169.254.255.255
denied-peer-ip=192.0.0.0-192.0.0.255
denied-peer-ip=192.0.2.0-192.0.2.255
denied-peer-ip=192.88.99.0-192.88.99.255
denied-peer-ip=198.18.0.0-198.19.255.255
denied-peer-ip=198.51.100.0-198.51.100.255
denied-peer-ip=203.0.113.0-203.0.113.255
denied-peer-ip=240.0.0.0-255.255.255.255

# Remove allowed-peer-ip as it may not be necessary
# allowed-peer-ip=10.0.0.1

# Quota settings
user-quota=12
total-quota=1200

# Enable long-term credential mechanism
lt-cred-mech

# SSL certificates
cert=/etc/letsencrypt/live/yami.ski/fullchain.pem
pkey=/etc/letsencrypt/live/yami.ski/privkey.pem

# External IP-Address of the TURN server
external-ip={{ turn_external_ip }}

# Internal IP-Address of the TURN server
listening-ip={{ turn_internal_ip }}

# Log file path
log-file=/var/tmp/turnserver.log

# Enable verbose logging
verbose
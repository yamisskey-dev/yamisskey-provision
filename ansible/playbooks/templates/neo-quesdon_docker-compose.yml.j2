version: '3'

services:
  app:
    image: ghcr.io/serafuku/neo-quesdon:{{ neo_quesdon_version }}:-latest
    depends_on:
      - db
      - redis
    restart: unless-stopped
    ports:
      - "127.0.0.1:3025:3000"
    networks:
      - internal
      - external
    env_file:
      - ./config/docker.env

  redis:
    image: redis:7-alpine
    restart: always
    networks:
      - internal
    volumes:
      - redis:/data

  db:
    image: postgres:15-alpine
    restart: always
    networks:
      - internal
    env_file:
      - ./config/docker.env
    volumes:
      - db:/var/lib/postgresql/data

  bullboard:
    image: venatum/bull-board:latest
    ports:
      - "127.0.0.1:8090:3000"
    environment:
      REDIS_HOST: redis
      REDIS_PORT: 6379
    networks:
      - internal
      - external
    restart: unless-stopped
    depends_on:
      - redis

volumes:
  db:
  redis:

networks:
  internal:
    internal: true
  external:
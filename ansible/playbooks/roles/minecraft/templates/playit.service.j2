[Unit]
Description=PlayIt Agent for Minecraft Server
Documentation=https://playit.gg/
After=docker.service
Requires=docker.service

[Service]
Type=simple
User={{ ansible_user }}
WorkingDirectory={{ minecraft_dir }}
ExecStart=/usr/bin/docker-compose up playit
ExecStop=/usr/bin/docker-compose stop playit
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
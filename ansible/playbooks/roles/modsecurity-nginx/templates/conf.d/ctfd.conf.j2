# ModSecurity-Nginx configuration for CTFd
# This file is included in the main ModSecurity-Nginx container

# Upstream definition
upstream ctfd_backend {
    server localhost:8000;
    keepalive 8;
}

# Server block for CTFd
server {
    listen 80;
    server_name {{ ctfd_server_name }};
    
    # Security headers
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header Referrer-Policy "strict-origin-when-cross-origin" always;
    
    # Large file uploads for CTF challenges
    client_max_body_size 50M;
    
    # Proxy settings
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto https;
    
    # WebSocket support
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection $connection_upgrade;
    
    # Main CTFd application
    location / {
        proxy_pass http://ctfd_backend;
        proxy_http_version 1.1;
        
        # Timeouts for file uploads
        proxy_connect_timeout 30s;
        proxy_send_timeout 90s;
        proxy_read_timeout 90s;
        
        # Buffering
        proxy_buffering on;
        proxy_buffer_size 64k;
        proxy_buffers 4 64k;
    }
    
    # Static files (if served by CTFd)
    location ~* \.(css|js|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)$ {
        proxy_pass http://ctfd_backend;
        proxy_http_version 1.1;
        
        # Cache static assets
        expires 1d;
        add_header Cache-Control "public, immutable";
    }
}

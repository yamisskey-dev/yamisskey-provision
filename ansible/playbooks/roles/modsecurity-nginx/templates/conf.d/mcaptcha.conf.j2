# ModSecurity-Nginx configuration for mCaptcha
# This file is included in the main ModSecurity-Nginx container

# Upstream definition
upstream mcaptcha_backend {
    server localhost:7493;
    keepalive 8;
}

# Server block for mCaptcha
server {
    listen 80;
    server_name {{ mcaptcha_server_name }};
    
    # Error page handling - redirect to maintenance page when backend is down
    error_page 502 503 504 @maintenance_redirect;

    # Maintenance page redirect location
    location @maintenance_redirect {
        return 302 https://down.yami.ski;
    }

    # Security headers
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header Referrer-Policy "strict-origin-when-cross-origin" always;
    
    # CORS headers for CAPTCHA API
    add_header 'Access-Control-Allow-Origin' '*' always;
    add_header 'Access-Control-Allow-Methods' 'GET, POST, OPTIONS' always;
    add_header 'Access-Control-Allow-Headers' 'Content-Type, Authorization' always;
    add_header 'Access-Control-Allow-Credentials' 'false' always;
    
    # Rate limiting for CAPTCHA requests (zone defined in 00-shared.conf)
    limit_req zone=mcaptcha_limit burst=50 nodelay;
    
    # Proxy settings
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto https;
    
    # API endpoints
    location /api/ {
        proxy_pass http://mcaptcha_backend;
        proxy_http_version 1.1;
        
        # CAPTCHA API timeouts
        proxy_connect_timeout 10s;
        proxy_send_timeout 30s;
        proxy_read_timeout 30s;
        
        # No caching for CAPTCHA
        add_header Cache-Control "no-cache, no-store, must-revalidate";
        expires 0;
    }
    
    # Widget endpoints
    location /widget/ {
        proxy_pass http://mcaptcha_backend;
        proxy_http_version 1.1;
        
        # Fast response for widgets
        proxy_connect_timeout 5s;
        proxy_send_timeout 15s;
        proxy_read_timeout 15s;

        # Light caching for widget resources
        proxy_cache static_cache;
        proxy_cache_methods GET HEAD;
        proxy_cache_valid 200 10m;
        proxy_cache_valid 404 1m;
        proxy_cache_use_stale error timeout updating;
        proxy_cache_key "$scheme$request_method$host$request_uri";

        add_header X-Cache-Status $upstream_cache_status;
    }
    
    # Main mCaptcha application
    location / {
        proxy_pass http://mcaptcha_backend;
        proxy_http_version 1.1;
        
        # Standard timeouts
        proxy_connect_timeout 30s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;
        
        # Buffering
        proxy_buffering on;
        proxy_buffer_size 64k;
        proxy_buffers 4 64k;

        # Light caching for dashboard content
        proxy_cache api_cache;
        proxy_cache_methods GET HEAD;
        proxy_cache_valid 200 2m;
        proxy_cache_valid 404 30s;
        proxy_cache_use_stale error timeout updating;
        proxy_cache_key "$scheme$request_method$host$request_uri";

        add_header X-Cache-Status $upstream_cache_status;
    }

    # Static assets for mCaptcha
    location ~* \.(css|js|woff|woff2|ttf|eot|svg|ico|png|jpg|gif)$ {
        proxy_pass http://mcaptcha_backend;

        proxy_cache static_cache;
        proxy_cache_valid 200 1d;
        proxy_cache_valid 404 1h;
        proxy_cache_use_stale error timeout updating;

        expires 1d;
        add_header Cache-Control "public";
        add_header X-Cache-Status $upstream_cache_status;
    }
}

# ModSecurity-Nginx configuration for Zitadel
# This file is included in the main ModSecurity-Nginx container

# Upstream definition
upstream zitadel_backend {
    server localhost:8993;
    keepalive 8;
}

# Server block for Zitadel
server {
    listen 80;
    server_name {{ zitadel_server_name }};

    # Error page handling - redirect to maintenance page when backend is down
    error_page 502 503 504 @maintenance_redirect;
    
    # Maintenance page redirect location
    location @maintenance_redirect {
        return 302 https://down.yami.ski;
    }

    # Buffer settings for gRPC
    client_body_buffer_size 16k;
    client_header_buffer_size 4k;
    client_max_body_size 100m;
    large_client_header_buffers 4 8k;
    
    # Timeouts
    client_body_timeout 60s;
    client_header_timeout 60s;
    send_timeout 60s;
    
    # Security headers
    add_header Strict-Transport-Security "max-age=63072000" always;
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-Download-Options "noopen" always;
    add_header X-Permitted-Cross-Domain-Policies "none" always;
    add_header Referrer-Policy "strict-origin-when-cross-origin" always;
    
    # Remove potentially revealing headers
    proxy_hide_header X-Powered-By;
    
    # Proxy settings
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto https;
    
    # WebSocket support
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection $connection_upgrade;
    
    # Health check endpoint
    location /healthz {
        proxy_pass http://zitadel_backend;
        proxy_http_version 1.1;
        
        # Health check specific settings
        access_log off;
        proxy_connect_timeout 5s;
        proxy_read_timeout 5s;
        proxy_send_timeout 5s;
    }
    
    # gRPC endpoints
    location /zitadel.admin.v1.AdminService/ {
        grpc_pass grpc://zitadel_backend;
        grpc_set_header Host $host;
        grpc_set_header X-Real-IP $remote_addr;
        grpc_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        grpc_set_header X-Forwarded-Proto https;
        
        # gRPC timeouts
        grpc_connect_timeout 60s;
        grpc_send_timeout 60s;
        grpc_read_timeout 60s;
    }
    
    # gRPC management endpoints
    location /zitadel.management.v1.ManagementService/ {
        grpc_pass grpc://zitadel_backend;
        grpc_set_header Host $host;
        grpc_set_header X-Real-IP $remote_addr;
        grpc_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        grpc_set_header X-Forwarded-Proto https;
        
        grpc_connect_timeout 60s;
        grpc_send_timeout 60s;
        grpc_read_timeout 60s;
    }
    
    # Main Zitadel application (HTTP fallback)
    location / {
        proxy_pass http://zitadel_backend;
        proxy_http_version 1.1;
        
        # Authentication flow timeouts
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;
        
        # Buffering
        proxy_buffering on;
        proxy_buffer_size 128k;
        proxy_buffers 4 256k;

        # No caching for authentication flows
        proxy_cache off;
        add_header Cache-Control "no-cache, no-store, must-revalidate";
    }

    # Static assets only
    location ~* \.(css|js|woff|woff2|ttf|eot|svg|ico|png|jpg|gif)$ {
        proxy_pass http://zitadel_backend;
        proxy_http_version 1.1;

        # Cache static assets with proxy cache
        proxy_cache static_cache;
        proxy_cache_valid 200 1h;
        proxy_cache_valid 404 5m;
        proxy_cache_use_stale error timeout updating;

        expires 1h;
        add_header Cache-Control "public";
        add_header X-Cache-Status $upstream_cache_status;
    }
}

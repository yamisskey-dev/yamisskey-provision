# MinIO Nginx Proxy Configuration
# Simplified for Tailscale + Cloudflare setup

# Basic rate limiting
limit_req_zone $binary_remote_addr zone=minio_general:10m rate=60r/m;

# Upstream definition
upstream minio_api_backend {
    server 127.0.0.1:9000;
}

# Server block for MinIO API
server {
    listen 8080;
    server_name {{ minio_api_server_name }};

    # Basic rate limiting
    limit_req zone=minio_general burst=20 nodelay;
    
    # Error handling
    error_page 502 503 504 /50x.html;
    location = /50x.html {
        return 502 "MinIO service temporarily unavailable";
    }

    # File upload settings
    client_max_body_size 1G;
    client_body_timeout 300s;
    
    # Basic security headers
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-Frame-Options "DENY" always;
    add_header X-Robots-Tag "noindex, nofollow" always;
    
    # Proxy settings
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto https;
    
    # Main MinIO API with proper access control
    location / {
        # Block direct browser access (but allow federation)
        set $block_direct "";
        if ($http_referer = "") {
            set $block_direct "${block_direct}1";
        }
        if ($http_user_agent ~* "(Mozilla|Chrome|Safari|Edge|Firefox)") {
            set $block_direct "${block_direct}2";
        }
        if ($http_accept ~* "text/html") {
            set $block_direct "${block_direct}3";
        }
        
        # Allow Cloudflare traffic
        if ($http_cf_ray != "") {
            set $block_direct "allowed";
        }
        
        # Allow all ActivityPub federation platforms
        if ($http_referer ~* "(misskey|mastodon|pleroma|firefish|calckey|foundkey|akkoma|sharkey|iceshrimp|gotosocial|pixelfed)") {
            set $block_direct "allowed";
        }
        
        # Block direct browser access
        if ($block_direct = "123") {
            return 403 "Direct access not allowed. Use federation platforms.";
        }
        
        # Upload restrictions
        if ($request_method ~ ^(PUT|POST|DELETE)$) {
            set $upload_allowed 0;
            if ($http_user_agent ~* "(misskey|pleroma|mastodon|firefish|outline|axios|curl|wget|python-requests|go-fed)") {
                set $upload_allowed 1;
            }
            if ($upload_allowed = 0) {
                return 403 "Upload not allowed from this client";
            }
        }
        
        proxy_pass http://minio_api_backend;
        proxy_http_version 1.1;
        
        # Timeouts for large files
        proxy_connect_timeout 30s;
        proxy_send_timeout 600s;
        proxy_read_timeout 600s;
        
        # Disable buffering for uploads
        proxy_buffering off;
        proxy_request_buffering off;
    }
}

# MinIO Nginx Proxy Configuration
# Simplified for Tailscale + Cloudflare setup

# Basic rate limiting
limit_req_zone $binary_remote_addr zone=minio_general:10m rate=60r/m;

# Upstream definition
upstream minio_api_backend {
    server 127.0.0.1:9000;
}

# Server block for MinIO API
server {
    listen 8080;
    server_name {{ minio_api_server_name }};

    # Basic rate limiting
    limit_req zone=minio_general burst=20 nodelay;
    
    # Error handling
    error_page 502 503 504 /50x.html;
    location = /50x.html {
        return 502 "MinIO service temporarily unavailable";
    }

    # File upload settings
    client_max_body_size 1G;
    client_body_timeout 300s;
    
    # Basic security headers
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-Frame-Options "DENY" always;
    add_header X-Robots-Tag "noindex, nofollow" always;
    
    # Proxy settings for S3 API
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto https;
    
    # S3 API specific headers
    proxy_set_header Authorization $http_authorization;
    proxy_set_header X-Amz-Content-Sha256 $http_x_amz_content_sha256;
    proxy_set_header X-Amz-Date $http_x_amz_date;
    proxy_set_header X-Amz-Security-Token $http_x_amz_security_token;
    proxy_set_header Content-Type $content_type;
    
    # Root path access control
    location = / {
        return 403 "MinIO S3 API - Direct access not allowed";
    }
    
    # Main MinIO API with proper access control
    location / {
        # Allow S3 API clients (AWS SDK, etc.)
        set $allowed_client 0;
        
        # Allow AWS SDK and S3 clients
        if ($http_user_agent ~* "(aws-sdk|boto|s3cmd|rclone|minio-go|aws-cli)") {
            set $allowed_client 1;
        }
        
        # Allow ActivityPub federation platforms
        if ($http_user_agent ~* "(misskey|mastodon|pleroma|firefish|calckey|foundkey|akkoma|sharkey|iceshrimp|gotosocial|pixelfed|outline|axios|curl|wget|python-requests|go-fed)") {
            set $allowed_client 1;
        }
        
        # Allow Cloudflare traffic
        if ($http_cf_ray != "") {
            set $allowed_client 1;
        }
        
        # Block direct browser access (text/html requests)
        if ($http_accept ~* "text/html") {
            set $browser_access 1;
        }
        
        # Block browsers unless they're federation platforms
        set $allow_federation 0;
        if ($http_referer ~* "(misskey|mastodon|pleroma|firefish|calckey|foundkey|akkoma|sharkey|iceshrimp|gotosocial|pixelfed)") {
            set $allow_federation 1;
        }
        set $block_browser "${browser_access}${allow_federation}";
        if ($block_browser = "10") {
            return 403 "Direct browser access not allowed";
        }
        
        # Block non-allowed clients
        if ($allowed_client = 0) {
            return 403 "Client not allowed";
        }
        
        proxy_pass http://minio_api_backend;
        proxy_http_version 1.1;
        proxy_set_header Connection "";
        
        # Preserve original host for S3 virtual hosting
        proxy_set_header Host $http_host;
        
        # Timeouts for large files
        proxy_connect_timeout 30s;
        proxy_send_timeout 600s;
        proxy_read_timeout 600s;
        
        # Disable buffering for uploads
        proxy_buffering off;
        proxy_request_buffering off;
        
        # Pass through S3 error responses
        proxy_intercept_errors off;
    }
}

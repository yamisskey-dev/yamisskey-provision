# ModSecurity-Nginx configuration for MinIO API and Web UI
# This file is included in the main ModSecurity-Nginx container

# Upstream definitions
upstream minio_api_backend {
    server localhost:9000;
    keepalive 8;
}

upstream minio_web_backend {
    server localhost:9001;
    keepalive 8;
}

# Server block for MinIO API
server {
    listen 8080;
    server_name {{ minio_api_server_name }};

    # Error page handling - redirect to maintenance page when backend is down
    error_page 502 503 504 @maintenance_redirect;

    # Maintenance page redirect location
    location @maintenance_redirect {
        return 302 https://down.yami.ski;
    }

    # Large file uploads
    client_max_body_size 1G;
    client_body_timeout 300s;
    
    # Security headers
    add_header X-Content-Type-Options "nosniff" always;
    add_header Referrer-Policy "strict-origin-when-cross-origin" always;
    
    # Proxy settings
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto https;
    
    # Main MinIO API
    location / {
        proxy_pass http://minio_api_backend;
        proxy_http_version 1.1;
        
        # Long timeouts for large file operations
        proxy_connect_timeout 30s;
        proxy_send_timeout 600s;
        proxy_read_timeout 600s;
        
        # Disable buffering for streaming
        proxy_buffering off;
        proxy_request_buffering off;

        # Cache GET requests for objects (media files)
        proxy_cache media_cache;
        proxy_cache_methods GET HEAD;
        proxy_cache_valid 200 1d;
        proxy_cache_valid 404 1h;
        proxy_cache_use_stale error timeout updating;
        proxy_cache_key "$scheme$request_method$host$request_uri";

        add_header X-Cache-Status $upstream_cache_status;

        # Browser caching for media files
        location ~* \.(jpg|jpeg|png|gif|ico|svg|webp|bmp|tiff|mp4|webm|mp3|wav|pdf|zip|tar|gz)$ {
            proxy_pass http://minio_api_backend;
            expires 30d;
            add_header Cache-Control "public, immutable";
            add_header X-Cache-Status $upstream_cache_status;
        }
    }
}

# Server block for MinIO Web UI
server {
    listen 8080;
    server_name {{ minio_web_server_name }};

    # Error page handling - redirect to maintenance page when backend is down
    error_page 502 503 504 @maintenance_redirect;

    # Maintenance page redirect location
    location @maintenance_redirect {
        return 302 https://down.yami.ski;
    }

    # Security headers
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header Referrer-Policy "strict-origin-when-cross-origin" always;
    
    # Proxy settings
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto https;
    
    # WebSocket support for real-time updates
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection $connection_upgrade;
    
    # Main MinIO Console
    location / {
        proxy_pass http://minio_web_backend;
        proxy_http_version 1.1;
        
        # Standard timeouts
        proxy_connect_timeout 30s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;
        
        # Buffering for better performance
        proxy_buffering on;
        proxy_buffer_size 64k;
        proxy_buffers 4 64k;

        # Cache for static assets
        proxy_cache static_cache;
        proxy_cache_methods GET HEAD;
        proxy_cache_valid 200 1h;
        proxy_cache_valid 404 1m;
        proxy_cache_use_stale error timeout updating;
        proxy_cache_key "$scheme$request_method$host$request_uri";

        add_header X-Cache-Status $upstream_cache_status;
    }

    # Static assets for MinIO Console
    location ~* \.(css|js|woff|woff2|ttf|eot|svg|ico)$ {
        proxy_pass http://minio_web_backend;

        proxy_cache static_cache;
        proxy_cache_valid 200 7d;
        proxy_cache_valid 404 1h;
        proxy_cache_use_stale error timeout updating;

        expires 7d;
        add_header Cache-Control "public, immutable";
        add_header X-Cache-Status $upstream_cache_status;
    }
}

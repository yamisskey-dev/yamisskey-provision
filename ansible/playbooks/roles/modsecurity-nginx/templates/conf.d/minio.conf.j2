# MinIO Nginx Proxy Configuration
# Simplified for Tailscale + Cloudflare setup

# High-throughput rate limiting for large file loads
limit_req_zone $binary_remote_addr zone=minio_general:20m rate=500r/m;
limit_req_zone $binary_remote_addr zone=minio_burst:10m rate=1000r/m;

# Upstream definition
upstream minio_api_backend {
    server 127.0.0.1:9000;
}

# Server block for MinIO API
server {
    listen 8080;
    server_name {{ minio_api_server_name }};

    # High-throughput rate limiting with large burst
    limit_req zone=minio_general burst=100 nodelay;
    limit_req zone=minio_burst burst=200 nodelay;
    
    # Error handling
    error_page 502 503 504 /50x.html;
    location = /50x.html {
        return 502 "MinIO service temporarily unavailable";
    }

    # File upload settings
    client_max_body_size 1G;
    client_body_timeout 300s;
    
    # Basic security headers
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-Frame-Options "DENY" always;
    add_header X-Robots-Tag "noindex, nofollow" always;
    
    # Proxy settings for S3 API
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto https;
    
    # S3 API specific headers
    proxy_set_header Authorization $http_authorization;
    proxy_set_header X-Amz-Content-Sha256 $http_x_amz_content_sha256;
    proxy_set_header X-Amz-Date $http_x_amz_date;
    proxy_set_header X-Amz-Security-Token $http_x_amz_security_token;
    proxy_set_header Content-Type $content_type;
    
    # Root path access control
    location = / {
        return 403 "MinIO S3 API - Direct access not allowed";
    }
    
    # Ultra-fast path for thumbnail and small images (bypass some checks)
    location ~* \.(webp|jpg|jpeg|png|gif|ico|svg)$ {
        # Minimal access control for speed
        set $allowed_client 1;
        
        # Ultra-aggressive caching
        proxy_cache media_cache;
        proxy_cache_valid 200 304 60d;
        proxy_cache_valid 404 1d;
        proxy_cache_use_stale error timeout updating http_500 http_502 http_503 http_504;
        proxy_cache_lock on;
        proxy_cache_lock_timeout 1s;
        proxy_cache_background_update on;
        proxy_cache_min_uses 1;
        
        # Maximum browser caching
        expires 60d;
        add_header Cache-Control "public, immutable, max-age=5184000";
        add_header X-Cache-Status $upstream_cache_status;
        
        # Ultra-fast settings
        proxy_pass http://minio_api_backend;
        proxy_http_version 1.1;
        proxy_set_header Connection "";
        proxy_set_header Host $http_host;
        
        # Minimal timeouts for images
        proxy_connect_timeout 1s;
        proxy_send_timeout 30s;
        proxy_read_timeout 30s;
        
        # Maximum buffering
        proxy_buffering on;
        proxy_buffer_size 512k;
        proxy_buffers 16 1m;
        proxy_busy_buffers_size 2m;
        proxy_request_buffering off;
        proxy_intercept_errors off;
    }
    
    # Main MinIO API with proper access control
    location / {
        # Allow S3 API clients (AWS SDK, etc.)
        set $allowed_client 0;
        
        # Allow AWS SDK and S3 clients
        if ($http_user_agent ~* "(aws-sdk|boto|s3cmd|rclone|minio-go|aws-cli)") {
            set $allowed_client 1;
        }
        
        # Allow ActivityPub federation platforms
        if ($http_user_agent ~* "(misskey|mastodon|pleroma|firefish|calckey|foundkey|akkoma|sharkey|iceshrimp|gotosocial|pixelfed|outline|axios|curl|wget|python-requests|go-fed)") {
            set $allowed_client 1;
        }
        
        # Allow Cloudflare traffic
        if ($http_cf_ray != "") {
            set $allowed_client 1;
        }
        
        # Block direct browser access (text/html requests)
        if ($http_accept ~* "text/html") {
            set $browser_access 1;
        }
        
        # Block browsers unless they're federation platforms
        set $allow_federation 0;
        if ($http_referer ~* "(misskey|mastodon|pleroma|firefish|calckey|foundkey|akkoma|sharkey|iceshrimp|gotosocial|pixelfed)") {
            set $allow_federation 1;
        }
        set $block_browser "${browser_access}${allow_federation}";
        if ($block_browser = "10") {
            return 403 "Direct browser access not allowed";
        }
        
        # Block non-allowed clients
        if ($allowed_client = 0) {
            return 403 "Client not allowed";
        }
        
        proxy_pass http://minio_api_backend;
        proxy_http_version 1.1;
        proxy_set_header Connection "";
        
        # Preserve original host for S3 virtual hosting
        proxy_set_header Host $http_host;
        
        # Aggressive caching for maximum performance
        proxy_cache media_cache;
        proxy_cache_valid 200 304 30d;
        proxy_cache_valid 404 1h;
        proxy_cache_use_stale error timeout updating http_500 http_502 http_503 http_504;
        proxy_cache_lock on;
        proxy_cache_lock_timeout 2s;
        proxy_cache_lock_age 5s;
        proxy_cache_revalidate on;
        proxy_cache_background_update on;
        proxy_cache_min_uses 1;
        
        # Extreme browser caching
        expires 30d;
        add_header Cache-Control "public, immutable, max-age=2592000";
        add_header X-Cache-Status $upstream_cache_status;
        
        # Ultra-fast timeouts for high throughput
        proxy_connect_timeout 3s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;
        
        # Maximum buffering for concurrent requests
        proxy_buffering on;
        proxy_buffer_size 256k;
        proxy_buffers 8 512k;
        proxy_busy_buffers_size 1m;
        proxy_temp_file_write_size 1m;
        proxy_max_temp_file_size 2g;
        proxy_request_buffering off;
        
        # HTTP/2 push for prefetching (if supported)
        http2_push_preload on;
        
        # Pass through S3 error responses
        proxy_intercept_errors off;
    }
}
